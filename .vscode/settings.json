{
  // ================ General Editor Settings ================
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 5,
  "editor.renderLineHighlight": "all",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontSize": 16,

  // ================ Vim General Configuration ================
  "vim.leader": " ",
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,

  // --- Plugins (Built-in to VSCodeVim) ---
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.tpope.surround": true,
  "vim.commentary": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(250, 240, 230, 0.5)",
  "vim.highlightedyank.duration": 200,

  // --- EasyMotion Visuals ---
  "vim.easymotionMarkerBackgroundColor": "#b4f9f8",
  "vim.easymotionMarkerForegroundColorOneChar": "#000000",
  "vim.easymotionMarkerFontWeight": "bold",

  // --- Argument Text Object Configuration ---
  "vim.argumentObjectSeparators": [",", ":", ";"],

  // ================ 1. RECURSIVE Key Bindings (THE FIX) ================
  // These MUST be here so <leader>f can trigger the internal EasyMotion mapping
  "vim.normalModeKeyBindings": [
    // <leader>f -> Jump to char anywhere (simulates typing <space><space>s)
    {
      "before": ["<leader>", "f"],
      "commands": ["vim.remap"],
      "args": { "after": ["<leader>", "<leader>", "s"] },
    },
    // <leader>e -> Find char forward (simulates typing <space><space>f)
    {
      "before": ["<leader>", "e"],
      "commands": ["vim.remap"],
      "args": { "after": ["<leader>", "<leader>", "f"] },
    },
  ],

  // ================ 2. NON-RECURSIVE Key Bindings (Standard) ================
  // All other commands go here for performance and stability
  "vim.normalModeKeyBindingsNonRecursive": [
    // --- Replicating <C-n> ---
    {
      "before": ["<C-n>"],
      "commands": ["editor.action.addSelectionToNextFindMatch"],
    },
    // --- Save & Quit ---
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"],
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.closeActiveEditor"],
    },

    // --- Project Navigation ---
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.action.toggleSidebarVisibility"],
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.files.action.showActiveFileInExplorer"],
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["workbench.action.gotoSymbol"],
    },

    // --- Docs & Inspection ---
    { "before": ["<leader>", "k"], "commands": ["editor.action.showHover"] },
    {
      "before": ["<leader>", "i"],
      "commands": ["editor.action.peekDefinition"],
    },

    // --- Git ---
    { "before": ["<leader>", "a"], "commands": ["gitlens.toggleFileBlame"] },
    {
      "before": ["<leader>", "h"],
      "commands": ["gitlens.showQuickFileHistory"],
    },
    { "before": ["<leader>", "l"], "commands": ["git.viewFileHistory"] },

    // --- Breakpoints / Debug ---
    {
      "before": ["<leader>", "b"],
      "commands": ["editor.debug.action.toggleBreakpoint"],
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["workbench.action.debug.start"],
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["workbench.action.debug.stop"],
    },

    // --- Editing & Refactor ---
    { "before": ["<leader>", "r"], "commands": ["editor.action.rename"] },
    { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] },
    { "before": ["<S-Space>"], "commands": ["editor.action.marker.next"] },

    // --- Testing ---
    { "before": ["<leader>", "t"], "commands": ["testing.runAtCursor"] },
    { "before": ["<leader>", "T"], "commands": ["testing.debugAtCursor"] },

    // --- Jumping / Nav ---
    {
      "before": ["<leader>", "j"],
      "commands": ["editor.action.revealDefinition"],
    },
    {
      "before": ["<leader>", "J"],
      "commands": ["editor.action.goToImplementation"],
    },
    { "before": ["<Tab>"], "commands": ["workbench.action.nextEditor"] },
    { "before": ["<S-Tab>"], "commands": ["workbench.action.previousEditor"] },
  ],

  // --- Visual Mode Mappings ---
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] },
  ],

  // ================ UI & Theme Settings ================
  "workbench.colorTheme": "Tokyo Night",
  "chat.viewSessions.orientation": "stacked",
  "chat.mcp.gallery.enabled": true,
  "chat.fontSize": 16,
  "chat.editor.fontSize": 16,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "zenMode.hideLineNumbers": false,
}
